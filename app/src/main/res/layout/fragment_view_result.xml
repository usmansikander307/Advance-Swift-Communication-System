<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmain">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Enter Your Arid Number (15-Arid-1255 *)"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:id="@+id/txt22"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt22"
        android:layout_marginLeft="40dp"
        android:id="@+id/etarid"
        android:layout_marginRight="40dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Enter Your Class (BSIT-7B *)"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_below="@+id/etarid"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:id="@+id/txt1"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1"
        android:layout_marginLeft="40dp"
        android:id="@+id/etclass"
        android:layout_marginRight="40dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etclass"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:id="@+id/btncheck"
        android:text="View Result"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/r1"
        android:layout_below="@+id/btncheck">

        <TextView
            android:id="@+id/txtname"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Name:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtstd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/txtname"
            android:hint="Name"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtclass"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtstd"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Class:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtdbclass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtstd"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/txtclass"
            android:hint="Class"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtshift"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtclass"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Shift:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtdbshift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtdbclass"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/txtname"
            android:hint="Shift"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtdbshift"
            android:layout_marginLeft="100dp"
            android:text="RESULT"
            android:textSize="30dp"
            android:textStyle="bold" />

    </RelativeLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/s1"
    android:layout_below="@+id/r1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/sub1"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Subject 1:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/res1"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/sub1"
            android:text="Result 1:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sub2"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Subject 2:"
            android:layout_below="@+id/sub1"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/res2"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="result 1:"
            android:layout_toRightOf="@+id/sub2"
            android:layout_below="@+id/res1"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/sub3"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Subject 2:"
            android:layout_below="@+id/sub2"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/res3"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="result 1:"
            android:layout_toRightOf="@+id/sub3"
            android:layout_below="@+id/res2"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/sub4"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Subject 2:"
            android:layout_below="@+id/sub3"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/res4"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="result 1:"
            android:layout_toRightOf="@+id/sub4"
            android:layout_below="@+id/res3"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/sub5"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Subject 2:"
            android:layout_below="@+id/sub4"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/res5"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="result 1:"
            android:layout_toRightOf="@+id/sub4"
            android:layout_below="@+id/res4"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/sub6"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Subject 2:"
            android:layout_below="@+id/sub5"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/res6"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="result 1:"
            android:layout_toRightOf="@+id/sub4"
            android:layout_below="@+id/res5"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>
</ScrollView>
</RelativeLayout>